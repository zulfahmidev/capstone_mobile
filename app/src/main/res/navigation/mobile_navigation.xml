    <fragment
        android:id="@+id/navigation_home"
        android:name="com.capstone.arahku.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home"/>

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.capstone.arahku.ui.chat.ChatFragment"
        android:label="@string/title_chat"
        tools:layout="@layout/fragment_chat"/>

    <fragment
        android:id="@+id/navigation_kating"
        android:name="com.capstone.arahku.ui.kating.KatingFragment"
        android:label="@string/title_kating"
